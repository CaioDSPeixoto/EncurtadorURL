@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}

<div class="error-container">
    <i class="fas fa-credit-card error-icon"></i>
    <h1 class="error-title">Ocorreu um erro durante o processo de pagamento</h1>
    <p class="error-message">Por favor, tente novamente mais tarde ou entre em contato com o suporte.</p>
    <a href="/" class="btn-home">Voltar para a página inicial</a>
</div>
