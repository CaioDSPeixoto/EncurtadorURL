@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}

<div class="error-container">
    <i class="fas fa-search-minus error-icon"></i>
    <h1 class="error-title">Erro 404: Página Não Encontrada</h1>
    <p class="error-message">A página que você está procurando não existe. Verifique o endereço ou volte para a página inicial.</p>
    <a href="/" class="btn-home">Voltar para a página inicial</a>
</div>
